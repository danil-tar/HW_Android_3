<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCountryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="26dp"
        android:background="#CFCCCC">

        <TextView
            android:id="@+id/AddCountry_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Country"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="5dp"
            android:background="#FFC107"/>

        <Button
            android:id="@+id/AddDefoultCountry_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddDefoultCountry" />

        <Button
            android:id="@+id/AddNewCountry_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddNewCountry" />

     

            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>